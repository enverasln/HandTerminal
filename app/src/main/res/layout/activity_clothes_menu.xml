<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    android:keepScreenOn="true"
    tools:context=".ClothesMenuActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonWhiteWithoutBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Barkodsuz Beyaz Fiyat Etiketi"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonWhiteWithBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Barkodlu Beyaz Fiyat Etiketi"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonRedDiscountWithBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Barkodlu Kırmızı İndirim Etiketi"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonRedDiscountWithoutBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Barkodsuz Kırmızı İndirim Etiketi"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonInstalmentPriceTagWithBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Barkodlu Taksitli Fiyat Etiketi"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonInstalmentPriceTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Barkodsuz Taksitli Fiyat Etiketi"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonInstalmentPriceRedTagWithoutBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Kırmızı Barkodsuz Taksitli  Etiket"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonInstalmentPriceRedTagWithBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Kırmızı Barkodlu Taksitli  Etiket"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonInstalmentPriceRedTagWithoutBarcode_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Kırmızı Barkodsuz %50"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonInstalmentPriceRedTagWithBarcode_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Kırmızı Barkodlu %50"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonInstalmentPriceRedTagWithoutBarcode_51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Kırmızı Barkodsuz Taksitli %50"
                    android:textColor="@color/white"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/buttonInstalmentPriceRedTagWithBarcode_51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:onClick="openLabelPage"
                    android:text="Kırmızı Barkodlu Taksitli %50"
                    android:textColor="@color/white"
                    android:visibility="invisible" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue_200"
        android:orientation="horizontal"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/closeClothesMenuActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="closeActivity"
            app:srcCompat="@drawable/ic_arrow_back"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/closeClothesMenuActivity"
            android:gravity="center_vertical"
            android:text="Giyim Etiketleri"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/closeClothesMenuActivity" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>